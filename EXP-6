#include <stdio.h>
#include <stdbool.h>
#include <string.h>
bool belongsToCFG(char str[]) {
    if (strlen(str) == 0) {
        return true;
    }
    if (str[0] == '0' && str[strlen(str)-1] == '1') {
        return belongsToCFG(str+1);
    }
    return false;
}
int main() {
    char str[100];
    printf("Enter a string: ");
    scanf("%s", str);
    bool result = belongsToCFG(str);
    if (result) {
        printf("The string belongs to the CFG language.\n");
    } else {
        printf("The string does not belong to the CFG language.\n");
    } 
    return 0;
}
